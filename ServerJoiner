-- „Çµ„Éº„Éì„ÇπÂèñÂæó
local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local player = Players.LocalPlayer

-- === GUI‰ΩúÊàê ===
local gui = Instance.new("ScreenGui")
gui.Name = "ServerJoinerGUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- === „É°„Ç§„É≥„Éï„É¨„Éº„É† ===
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.3, 0, 0.3, 0) 
frame.Position = UDim2.new(0.5, 0, 0.5, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

-- === „Çø„Ç§„Éà„É´„Éê„Éº ===
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0.2, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
titleBar.Parent = frame

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -0.08, 1, 0)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "üîó Server Joiner"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = titleBar

-- === Èñâ„Åò„Çã„Éú„Çø„É≥ ===
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0.12, 0, 0.7, 0)
closeBtn.Position = UDim2.new(0.88, 0, 0.15, 0)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.new(1, 1, 1)
closeBtn.Font = Enum.Font.SourceSansBold
closeBtn.TextScaled = true
closeBtn.Parent = titleBar

-- === Job IDÂÖ•ÂäõÊ¨Ñ ===
local textbox = Instance.new("TextBox")
textbox.PlaceholderText = "Enter Server Job ID..."
textbox.Size = UDim2.new(0.9, 0, 0.22, 0)
textbox.Position = UDim2.new(0.05, 0, 0.35, 0)
textbox.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
textbox.Text = ""
textbox.ClearTextOnFocus = false
textbox.Font = Enum.Font.SourceSans
textbox.TextScaled = true
textbox.Parent = frame

-- === Copy„Éú„Çø„É≥ÔºàÂ∑¶Ôºâ ===
local copyButton = Instance.new("TextButton")
copyButton.Size = UDim2.new(0.43, 0, 0.22, 0)
copyButton.Position = UDim2.new(0.05, 0, 0.65, 0)
copyButton.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
copyButton.Text = "Copy My Job ID"
copyButton.TextColor3 = Color3.new(1, 1, 1)
copyButton.Font = Enum.Font.SourceSansBold
copyButton.TextScaled = true
copyButton.Parent = frame

-- === Join„Éú„Çø„É≥ÔºàÂè≥Ôºâ ===
local joinButton = Instance.new("TextButton")
joinButton.Size = UDim2.new(0.43, 0, 0.22, 0)
joinButton.Position = UDim2.new(0.52, 0, 0.65, 0)
joinButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
joinButton.Text = "Join Server"
joinButton.TextColor3 = Color3.new(1, 1, 1)
joinButton.Font = Enum.Font.SourceSansBold
joinButton.TextScaled = true
joinButton.Parent = frame

-- === ‰∏∏ËßíÈñ¢Êï∞ ===
local function round(obj)
	local c = Instance.new("UICorner")
	c.CornerRadius = UDim.new(0, 8)
	c.Parent = obj
end
round(frame)
round(textbox)
round(joinButton)
round(copyButton)
round(closeBtn)

-- === Job ID‰øùÊåÅ ===
_G.Job = ""

-- === TextBoxÂÖ•ÂäõÂÆå‰∫ÜÊôÇ ===
textbox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		_G.Job = textbox.Text
	end
end)

-- === Join„Éú„Çø„É≥ ===
joinButton.MouseButton1Click:Connect(function()
	if _G.Job ~= "" then
		local success, err = pcall(function()
			TeleportService:TeleportToPlaceInstance(game.PlaceId, _G.Job, player)
		end)
		if not success then
			joinButton.Text = "Teleport Failed!"
			task.wait(1.2)
			joinButton.Text = "Join Server"
		end
	else
		joinButton.Text = "Enter Job ID!"
		task.wait(1.2)
		joinButton.Text = "Join Server"
	end
end)

-- === Copy„Éú„Çø„É≥ ===
copyButton.MouseButton1Click:Connect(function()
	local myJob = tostring(game.JobId)
	if setclipboard then
		setclipboard(myJob)
		copyButton.Text = "Copied!"
		task.wait(1.2)
		copyButton.Text = "Copy My Job ID"
	else
		copyButton.Text = "Cannot Copy"
		task.wait(1.2)
		copyButton.Text = "Copy My Job ID"
	end
end)

-- === Èñâ„Åò„Çã„Éú„Çø„É≥ ===
closeBtn.MouseButton1Click:Connect(function()
	gui:Destroy()
end)
